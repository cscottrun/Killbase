<link href="./style.css" rel="stylesheet" >

<header>
  <a href="/">
    <img src="https://cdn2.iconfinder.com/data/icons/picons-basic-1/57/basic1-154_danger_skull_death-512.png" alt="">
    <div id= "headerdiv">
      <h3>Killbase</h3>
    </div>
  </a>
</header>

  <body>
    <div class = 'container'>
      
      <div id='navBar'>
        <a href='/assassins'><p>Assassins</p></a>
        <a href='/contracts'><p>Contracts</p></a> 
        <a href='/editassassin'><p>Register</p></a> 
        <a href='/signup'><p>Sign up for a job</p></a>
        <a href='/newcontract'><p>Create a new contract</p></a>   
      </div>
      <h1 class='title'>Open Contracts</h1>
    
      <ul class='allcontracts'>
          <%contracts.forEach((contract) => { %>
            <ul class=contract-list-items>
              <li class=contract-item>
                  <h2>
                    <%=contract.target_name%>
                  </h2>
                <div>
                  <img
                  class = 'photo' 
                  src="<%=contract.target_photo%>" 
                  alt="<%=contract.target_name%>"
                  >
                </div>
                  <h4>
                    Budget $<%=contract.budget%>
                  </h4>      
                  <h4>
                    <%=contract.target_location%>
                  </h4>
                  <h4>
                  Security level <%=contract.target_security%>
                  </h4>
               
              </li>
            </ul>  
         <% }) %>
        </ul>

  
</body>
