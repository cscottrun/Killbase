<% include header %>
<h1 class='title'>Tell us about your job</h1>


<form class = "form" action="contracts-add/done" method = "post">
  <div>
    <label for="client_name">Your name:</label>
    <input class="input" type="string" id="client_name" name="client_name">
  </div>
  <br>
  <div>
      <label for="target_name">Target name:</label>
      <input class="input" type="string" id="target_name" name="target_name">
    </div>
    <br>
    <div>
      <label for="target_location">Target location:</label>
      <input class="input" type="text" id="target_location" name="target_location">
    </div>
    <br>
    <div>
      <label for="budget">Your budget</label>
      <input class="input" type="integer" id="budget" name="budget">
    </div>
    <br>
    <div>
      <label for="target_photo">Provide a photo</label>
      <input class="input" type="text" id="target_photo" name="target_photo">
    </div>
    <br>
    <div>
      <label for="target_security">From 1-10, how protected is this target?</label>
      <input class="input" type="ingeger" id="target_security" name="target_security">
    </div>
    <br>
    <button type = "submit">Submit</button>
</form>

